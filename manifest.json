{
  "manifest_version": 2,
  "name": "Cookie Share",
  "version": "0.1.2",
  "description": "Sends and receives cookies with your friends",
  "permissions": ["cookies", "activeTab", "tabs", "storage", "<all_urls>"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
